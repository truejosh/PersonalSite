@{
    /**/

    ViewBag.Title = "Home Page";
}


<section class="row" id="tmHome">
    <div class="col-12 tm-home-container">
        <div class="text-white tm-home-left">
            <p class="tm-home-text">
               
            </p>
            <p class="text-uppercase tm-slogan"><a href="#tmFeatures" class="btn btn-primary">View my Skills</a></p>
            <hr class="tm-home-hr" />
            <h2 class="tm-home-title">Why I started my career</h2>
            <div class="tm-bg-black-transparent tm-feature-box">
                <p class="tm-home-text">
                    Hi! I am Josh a full-stacked web developer. I am not scared of spending as many hours as needed to get things completed but also be proud my work. I truly enjoy debugging. Sometimes I like to view it as a game of where is Waldo but there is only one waldo in the entire book.
                </p>
            </div>
        </div>
        <div class="tm-home-right">
            @*<img src="~/content/img/mobile-screen.png" alt="App on Mobile mockup" /> this is an img of the phone from template*@
            <img src="~/Content/img/Me1.png" alt="Image" />
        </div>
    </div>
</section>

<!-- Features -->
<section id="tmAppFeatures">
    <div class="row">
        <div class="col-12 text-center text-white tm-bg-black-transparent p-5 tm-app-header">
            <h2 class="text-uppercase mb-3 tm-app-feature-header">Skills</h2>
            <p class="mb-0 small">Tools:<br />Visual Studio, Git, Teams, Discord, Slack, VS Code, SSMS</p>
        </div>
    </div>
</section>
<div class="row" id="tmFeatures">
    <div class="col-lg-4">
        <div class="tm-bg-black-transparent tm-feature-box">
            <h3 @*class="tm-feature-name"*@>Front End</h3>

            <div class="tm-feature-icon-container">
                <i class="fas fa-3x fa-server"></i>
            </div>

            <p class="text-center">
                <ul>
                    <li>
                        HTML5
                    </li>
                    <li>
                        JavaScript
                    </li>
                    <li>
                        jQuery
                    </li>
                    <li>
                        Bootstrap
                    </li>
                    <li>
                        CSS
                    </li>
                    <li>
                        React JS
                    </li>
                </ul>
            </p>
            @*@Html.ActionLink("My Projects", "Projects", "Home")*@
        </div>
    </div>

    <div class="col-lg-4">
        <div class="tm-bg-black-transparent tm-feature-box">
            <h3 @*class="tm-feature-name"*@>Mid End</h3>

            <div class="tm-feature-icon-container">
                <i class="fas fa-3x fa-headphones"></i>
            </div>
            <p class="text-center">
                <ul>
                    <li>
                        C#
                    </li>
                    <li>
                        ASP.NET
                    </li>
                    <li>
                        MVC
                    </li>
                    <li>
                        LINQ
                    </li>
                </ul>
            </p>
            @*@Html.ActionLink("My Projects", "Projects", "Home")*@
        </div>
    </div>


    <div class="col-lg-4">
        <div class="tm-bg-black-transparent tm-feature-box">
            <h3 @*class="tm-feature-name"*@>Back End</h3>

            <div class="tm-feature-icon-container">
                <i class="fas fa-3x fa-satellite-dish"></i>
            </div>
            <p class="text-center">
                <ul>
                    <li>
                        SQL Server
                    </li>
                    <li>
                        ADO.NET
                    </li>
                </ul>
            </p>
        </div>
    </div>
    <div class="col-md-3  " style="margin:auto">
        @*<p class="text-uppercase tm-slogan"><a href="@Url.Action("projects","home")" class="btn btn-primary">View my Projects</a></p>*@
    </div>
   
</div>

